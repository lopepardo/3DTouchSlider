{
  "name": "3dtouchslider",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "scss": "node-sass --output-style compressed -o dist/css src/scss",
    "autoprefixer": "postcss -u autoprefixer -r dist/css/*",
    "lint-html": "htmlhint index.html",
    "lint-scss": "stylelint src/scss/*.scss --syntax scss || true",
    "lint-js": "eslint src/js",
    "uglify": "mkdir -p dist/js && uglifyjs src/js/*.js -m -o dist/js/app.js && uglifyjs src/js/*.js -m -c -o dist/js/app.min.js",
    "imagemin": "imagemin src/images dist/images -p",
    "icons": "svgo -f src/images/icons && mkdir -p dist/images && svg-sprite-generate -d src/images/icons -o dist/images/icons.svg",
    "serve": "browser-sync start --server --files '*.html, dist/css/*.css, dist/js/*.js'",
    "build:html": "run-s lint-html",
    "build:scss": "run-s lint-scss scss",
    "build:js": "run-s lint-js uglify",
    "build:images": "run-s imagemin icons",
    "build": "run-s build:html build:scss build:js",
    "watch:html": "onchange '*.html' -- npm run build:html",
    "watch:scss": "onchange 'src/scss/**/*.scss' -- npm run build:scss",
    "watch:js": "onchange 'src/js/*.js' -- npm run build:js",
    "start": "run-p serve watch:html watch:scss watch:js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.26.13",
    "eslint": "^7.13.0",
    "htmlhint": "^0.14.2",
    "imagemin-cli": "^6.0.0",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "stylelint": "^13.7.2",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "svgo": "^1.3.2",
    "uglify-js": "^3.11.5"
  }
}
